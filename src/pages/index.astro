---
import Layout from 'src/layouts/Layout.astro'
import ProfileHeader from 'src/components/ProfileHeader.astro'
import Socials from 'src/components/Socials.astro'
import Footer from 'src/components/Footer.astro'
---

<Layout title="James Beck" description="Personal website and blog">
  <Fragment slot="head">
    <link
      rel="alternate"
      type="application/rss+xml"
      title="James Beck's Blog"
      href="/rss.xml"
    />
  </Fragment>

  <main class="container">
    <ProfileHeader />

    <nav class="page-nav">
      <a href="/bio" class="page-nav-link">Bio</a>
      <a href="/writing" class="page-nav-link">Writing</a>
      <a href="/music" class="page-nav-link">Music</a>
    </nav>

    <p class="intro-bio">
      James Beck is a Brooklyn-based <a href="/writing" class="circle-link">writer</a>, technologist, and <a href="/music" class="circle-link">music producer</a> working on consumer blockchain applications.
    </p>

    <Socials />
    <Footer />
  </main>
</Layout>
